<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>Pie Chart</servlet-name>
		<servlet-class>
			com.helloweenvsfei.jfreechart.PieChartServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BarChartServlet</servlet-name>
		<servlet-class>
			com.helloweenvsfei.jfreechart.BarChartServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BarChartServlet2</servlet-name>
		<servlet-class>
			com.helloweenvsfei.jfreechart.BarChartServlet2
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LineChartServlet</servlet-name>
		<servlet-class>
			com.helloweenvsfei.jfreechart.LineChartServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AreaChartServlet</servlet-name>
		<servlet-class>
			com.helloweenvsfei.jfreechart.AreaChartServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TimeChartServlet</servlet-name>
		<servlet-class>
			com.helloweenvsfei.jfreechart.TimeChartServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CombinedChartServlet</servlet-name>
		<servlet-class>
			com.helloweenvsfei.jfreechart.CombinedChartServlet
		</servlet-class>
	</servlet>
  <servlet>
    <servlet-name>PDFServlet</servlet-name>
    <servlet-class>com.helloweenvsfei.itext.PDFServlet</servlet-class>
  </servlet>

	<servlet-mapping>
		<servlet-name>Pie Chart</servlet-name>
		<url-pattern>/pie</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BarChartServlet</servlet-name>
		<url-pattern>/bar</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BarChartServlet2</servlet-name>
		<url-pattern>/bar2</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LineChartServlet</servlet-name>
		<url-pattern>/line</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AreaChartServlet</servlet-name>
		<url-pattern>/area</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TimeChartServlet</servlet-name>
		<url-pattern>/time</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CombinedChartServlet</servlet-name>
		<url-pattern>/comb</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>PDFServlet</servlet-name>
    <url-pattern>/pdf</url-pattern>
  </servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
